<p id="notice"><%= notice %></p>

<h1>Reminder Lists</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Description</th>
      <th>Date</th>
      <th>Isdone</th>
      <th>Isoverdue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminder_lists.each do |reminder_list| %>
      <tr>
        <td><%= reminder_list.id %></td>
        <td><%= reminder_list.description %></td>
        <td><%= reminder_list.date %></td>
        <td><%= reminder_list.isDone %></td>
        <td><%= reminder_list.isOverDue %></td>
        <td><%= link_to 'Show', reminder_list %></td>
        <td><%= link_to 'Edit', edit_reminder_list_path(reminder_list) %></td>
        <td><%= link_to 'Destroy', reminder_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

